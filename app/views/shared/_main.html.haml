.main
  .header
    .left-header
      .left-header__title
        = @book.name
    .right-header
      .right-header__user
        = current_user.name
      .right-header__user-btn
        = link_to edit_user_path(current_user) do
          = icon('fa', 'cog',class: 'icon')
  .menu
    .new-word
      = link_to new_book_word_path(@book) do
        = icon('fa', 'leaf',class: 'icon')
        単語登録
    %form#form{:action => "自分のサイトURL", :method => "get"}
      %input#box{:placeholder => "単語を検索", :type => "text"}/
      %button#btn{:type => "submit"}
        %i.fas.fa-search
  .words
    .word
      = render @words